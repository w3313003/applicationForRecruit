$color = #a3ddf9


.chatWrap
	position: absolute
	width: 100%
	height 100%
	overflow: hidden
	display: flex
	flex-direction: column
	.chatContent
		flex 1
		overflow-x: hidden
		overflow-y: scroll
		.left, .right
			max-width 40vw
			padding: 20px
			word-break: break-all
			p
				margin 0
				&.time
					font-size 12px
					color #666
					margin-top 3px
		.left
			.wrap
				display: flex
				img
					flex 0 0 30px
					height 30px
					border-radius: 50%
					vertical-align: top
				.content
					flex 1
					padding 10px
					box-sizing: border-box
					border-radius: 5px
					span
						background: pink
						position: relative
						padding 10px
						border-radius: 10px
						display: inline-block
						&:before
							position: absolute
							width 10px 
							height 10px
							content: ''
							background: pink
							transform: rotate(45deg)
							left -5px
		.right
			position: relative
			right -50vw
			.wrap
				display: flex
				img
					flex 0 0 30px
					height 30px
					border-radius: 50%
					vertical-align: top
				.content
					flex 1
					padding 10px
					box-sizing: border-box
					word-break: break-all
					border-radius: 5px
					text-align: right
					span
						background: $color
						position: relative
						padding 10px
						border-radius: 10px
						text-align: left
						display: inline-block
						&:before
							position: absolute
							width 10px 
							height 10px
							content: ''
							background: $color
							transform: rotate(45deg)
							right -5px
	.chatBox
		color #000

	